<div class="container">
<h1>Hi, <%= @current_user.username %>!</h1>



  <% if @current_user.posts %>
      <% @all_the_posts.flatten.each do |post| %>
      <div class="<%= post.content_type %>">
        <hr>
        <div id= "author">
          <ul>
            <li>
              <%= if post.author then post.author.html_safe else "Unknown Author" end %>: 
            </li>
          </ul>
        </div>
        <h1><ul>
          <li>
            <%= post.title.html_safe if post.title %>
          </li>
        </ul></h1>
        <div id= "content" >
          <ul>
            <li>
              <% if post.content %>
                <%= post.content.html_safe %> 
                <% if post.content.length > 300 %>
                  <%= link_to "See more", post.url %>
                <% end %>
              <% end %>
            </li>
          </ul>
        </div>
        <div id= "date">
          <ul>
            <li>
              <%= post.post_date.strftime("Posted on %B %e, %l:%M %p") if post.post_date %>
            </li><br>
          </ul>
        </div>
      </div>
      <% end %>
  <% else %>
    <h1>Expand your view!</h1>
  <% end %>
</div>
